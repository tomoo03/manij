.team-index-wrapper
  .team-index-wrapper__main-container
    - if @team.present?
      - @teams.each do |team|
        .team-index-wrapper__main-container__team-card
          .team-index-wrapper__main-container__team-card__heading
            %p
              = icon('fa', 'user-friends')
              = team.name
          .team-index-wrapper__main-container__team-card__member-field
            - team.
            %ul
              %li
                =
    - else


    .form-wrapper__container__header
      %p
        = icon('fa', 'user-friends')
        チームを選択
    .form-wrapper__container__form
      - unless @teams.empty?
        .form-wrapper__container__form__teamfield
          %h2 チームを選択してください
        - @teams.each do |team|
          .form-wrapper__container__form__teamfield
            %p
              = link_to "#{team.name}", team_path(team)
      - else
        %h2 チームはありません
      .form-wrapper__container__form__teamfield
        %p
        = link_to 'チームを新規作成', new_team_path
