.form-wrapper
  .form-wrapper__container
    .form-wrapper__container__header
      %p
        = icon('fa', 'edit')
        チームの編集
    = form_with model: @team, url: team_path, class: "form-wrapper__container__form", local: true do |f|
      .form-wrapper__container__form__field
        %span
          = icon('fa', 'pen')
        = f.text_field :name, class: "form-wrapper__container__form__field__input", placeholder: 'チーム名', autofocus: true
      .form-wrapper__container__form__field
        .form-wrapper__container__form__field__check-boxes
          = f.collection_check_boxes :user_ids, User.all, :id, :name
      .form-wrapper__container__form__field
        = f.submit "Create", class: "form-wrapper__container__form__field__button"